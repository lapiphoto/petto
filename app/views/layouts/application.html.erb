<!DOCTYPE html>
<html>
  <head>
    <title>Petto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
  </head>

 <body>
  <header class="navbar navbar-fixed-top navbar-inverse-">
    <div class="space2"></div>
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <%= link_to root_path do %><div class="logo"></div><% end %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li><%= link_to 'ユーザー一覧', users_path %></li>
                <li><%= link_to 'Pet一覧', pets_path %></li>
                <li><%= link_to 'マイページ', user_path(current_user) %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <% else %>
                <li><%= link_to ' 新規登録', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
                <li><%= link_to ' ログイン', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in'%></li>
            <% end %>
          </ul>
       </div>
  </header>
  <div class="space"></div>
    <%= yield %>
  <footer>
    <img src="/assets/pet2-2cd62c106ee4b306af1e663e689646200129262ec32d38e387ad5e0567b792af.jpg" class="footer-image">
  </footer>
  </body>
</html>
