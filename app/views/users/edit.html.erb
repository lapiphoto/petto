<div class="container">
  <div class="row">
   <div class="col-xs-12">
    <div class="col-xs-2">
    </div>
     <div class="col-xs-8">
      <h1 class=center2>新規投稿</h1>
        <div class=space2></div>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group has-icon">
            <div class="user-edit-image">
              <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", :size =>'200x200' %>
            </div>
            <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
          </div>
          <div class="form-group has-icon">
            <%= f.label :名前 %>
            <label class="control-label sr-only" for="inputEmail">Name</label>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
          </div>

          <div class="form-group　has-icon">
           <%= f.label :自己紹介 %>
           <%= f.text_field :introduction, class: "form-control" %>
          </div>

          <div class="form-group　has-icon">
           <%= f.label :ブログ・SNS%>
           <%= f.text_field :blog, class: "form-control", placeholder:"（例）ig:@xxxx,twtr:@xxxx"  %>
          </div>

          <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>
      </div>
    </div>
  </div>