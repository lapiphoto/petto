<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-3">
        <%= render 'info', user: @user %>
      </div>
      <div class="col-xs-9">
            <table class="table table-bordered table-hover table-condensed">
              <h2>Pet 一覧</h2>
              <p>(全<%= @pets.count %>件)</p> <br></br>
              <%= render 'pets/card', pets: @pets %>
            </table>
      </div>
    </div>
  </div>
</div>
<% if current_user == @user %>
<%= link_to new_pet_path do %><div class="page_top"></div><% end %>
<% end %>