<div class="container">
  <div class="row">
   <div class="col-xs-12">
    <div class="col-xs-2">
    </div>
      <h1 class=center2>よくある質問編集</h1>
      <!-- form_with部分 -->
      <%= form_with model: @question,url: pet_questions_path, local: true do |f| %>

        <h4>タイトル</h4>
        <%= f.text_field :title, class: "form-control" %>

        <h4>本文</h4>
        <%= f.text_area :body, class: "form-control" %>

        <%= f.submit '更新', class:"btn btn-lg btn-block btn-base-1 mt-20"  %>

      <% end %>
  </div>
 </div>
</div>

