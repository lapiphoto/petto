<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-12">
      </div>


      <!--カテゴリ-->
      <% Category.all.each do |category| %>
          <%= link_to category.name, categories_path(category), class: "botan" %>
      <% end %>

      <table class="table table-bordered table-hover table-condensed">




        <!--検索-->
        <%= search_form_for @search, url: pets_path do |f| %>
              <span><%= f.text_field :title_cont ,placeholder: 'タイトル' %></span>
              <span><%= f.submit "検索" %></span>
            <% end %>

        <!--表示-->
            <h2>Pet 一覧</h2>
            <p>(全<%= @search_pets.count %>件)</p> <br></br>
          <% @search_pets.each do |pet| %>
            <%= link_to pet_path(pet) do  %>
              <div class=" col-lg-4">
                <div class="card">
                  <h4><%= pet.title %></h4>
                  <div class="center2"><%= attachment_image_tag pet, :image, :fill, 300,  300, format: 'jpeg' %></div>
                  <h4><%= pet.comment %></h4>
                </div>
              </div>
            <% end %>
          <% end %>

      </table>
    </div>
  </div>
</div>