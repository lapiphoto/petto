<div class="container">
  <div class="row">
   <div class="col-xs-12">
    <div class="col-xs-2">
    </div>
     <div class="col-xs-8">
      <h1 class=center2>新規投稿</h1>
      <!-- form_with部分 -->
      <%= form_with model:@pet, local:true do |f| %>

        <div class="form_input">
          <%= f.label :カテゴリー %>
          <%= f.collection_select :category_id, Category.all, :id, :name,:include_blank => "カテゴリを選択してください" %>
        </div>

        <div class="form-group">
         <%= f.label :タイトル %>
         <%= f.text_field :title, class: "form-control", placeholder:" （例）ダックスフンド"%>
        </div>

        <h4>写真</h4>
         <%= f.attachment_field :image, fallback: "no_pet.jpg", :size =>'200x200' %>

        <div class="form-group">
         <%= f.label :一言コメント %>
         <%= f.text_field :comment, class: "form-control", placeholder:"（例）３歳♀ももちゃん"%>
        </div>

        <div class="form-group">
         <%= f.label :購入費用 %>
         <%= f.text_field :purchase_cost, class: "form-control", placeholder:"（例）１５万円" %>
         </div>

        <div class="form-group">
         <%= f.label :初期費用・買ったものなど %>
         <%= f.text_field :initial_cost, class: "form-control", placeholder:"（例）小屋、トイレ、リードなど２万円ぐらい" %>
        </div>

        <div class="form-group">
         <%= f.label :購入場所 %>
         <%= f.text_field :place, class: "form-control", placeholder:"（例）〇〇ホームセンター" %>
        </div>

        <div class="form-group">
          <%= f.label :飼育費用 %>
         １ヶ月<%= f.text_field :cost, class: "form-control", placeholder:"（例）月５０００円" %>
         </div>

        <div class="form-group">
         <%= f.label :平均寿命 %>
         <%= f.text_field :lifespan, class: "form-control", placeholder:"（例）１２〜１５歳" %>
        </div>

        <div class="form-group">
         <%= f.label :体長 %>
         <%= f.text_field :length, class: "form-control", placeholder:"（例）６０cm" %>
        </div>

        <div class="form-group">
         <%= f.label :体重 %>
         <%= f.text_field :weight, class: "form-control", placeholder:"（例）７kg" %>
        </div>

        <div class="form-group">
         <%= f.label :性格 %>
         <%= f.text_area :personality, class: "form-control", placeholder:"（例）好奇心旺盛な子です" %>
        </div>

        <div class="form-group">
         <%= f.label :飼い方 %>
         <%= f.text_area :care, class: "form-control", placeholder:"（例）散歩は1日に４５分ぐらい" %>
        </div>

        <div class="form-group">
         <%= f.label :餌 %>
         <%= f.text_area :food, class: "form-control", placeholder:"（例）1日２５０g程度" %>
        </div>

        <div class="form-group">
         <%= f.label :飼育での注意 %>
         <%= f.text_area :attention, class: "form-control", placeholder:"（例）ヘルニアになりやすい犬種なので２本足でたたせるなどの無理な体制は取らないように注意" %>
        </div>


        <%= f.submit '投稿', class:"btn btn-lg btn-block btn-base-1 mt-20" %>

      <% end %>
    </div>
   </div>
  </div>
 </div>
</div>