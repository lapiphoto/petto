<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-12">
      </div>
      <table class="table table-bordered table-hover table-condensed">
            <h2>Pet 一覧</h2>
            <p>(全<%= @pets.count %>件)</p> <br></br>
          <% @pets.each do |pet| %>
            <%= link_to pet_path(pet) do  %>
              <div class="card col-lg-4">
                <h4><%= pet.title %></h4>
                <%= attachment_image_tag pet, :image, :fill, 300,  300, format: 'jpeg' %>
                <h4><%= pet.comment %></h4>
              </div>
            <% end %>
          <% end %>

      </table>
    </div>
  </div>
</div>