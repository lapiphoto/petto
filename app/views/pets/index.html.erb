<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-12 col-xs-offset-10">
        <%= link_to "新規投稿", new_pet_path	, class: "btn btn-info active" %> <br></br>
      </div>
      <table class="table table-bordered table-hover table-condensed">


            <p>(全<%= @pets.count %>件)</p> <br></br>
          <% @pets.each do |pet| %>
          <div class="col-lg-4">
            <p><%= link_to pet.title, pet_path(pet)%></p>
            <%= attachment_image_tag @pet, :image, :fill, 300,  300, format: 'jpeg' %>
            <p><%= pet.comment %></p>
          </div>
          <% end %>

      </table>
    </div>
  </div>
</div>